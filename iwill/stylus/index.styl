.swiper
  position relative
  padding: 30px 0
  .swiper-view
    overflow hidden
    ul
      li
        position relative
        margin-right 24px
        a
          display: block
          &:after
            content: ''
            position: absolute
            top: 0
            left 0
            right 0
            bottom: 0
            z-index 1
        img
          width: 376px
          height 212px
  .arrow
    div
      position: absolute
      top: 50%
      margin-top -55px
      width: 46px
      height 110px
      text-align: center
      line-height: 110px
      cursor pointer
      transition: all 0.3s linear
      background-color rgba(134, 179, 167, 0.2)
      &:hover
        background-color rgba(176, 210, 210, 0.6)
      &.prev
        left -66px
      &.next
        right -66px

.category
  padding-bottom 60px
  h4
    padding-top 22px
    line-height: 75px
    font-size: 30px
    color: #333
    text-align: center
  .list
    img
      width: 576px
      transition: all 0.3s linear
    .mask
      opacity: 0
      visibility hidden
      position absolute
      top: 0
      left 0
      right 0
      bottom: 0
      background-color rgba(134, 179, 167, 0.75)
      transition: all 0.3s linear
      p
        position: absolute
        top: 50%
        left 0
        right 0
        margin-top -25px
        text-align: center
        font-size: 30px
        color #fff
        line-height: 50px
        white-space: nowrap
        overflow hidden
        text-overflow: ellipsis
        padding: 0 20px
        .bg-9
          margin-left 10px
    .box
      position relative
      overflow hidden
      transition: all 0.3s linear
      &:hover
        border-radius: 3px
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.35)
        img
          transform: scale(1.05)
        .mask
          opacity 1
          visibility visible
    .big
      float right
      img
        height 576px
    ul
      margin-left -24px
      li
        margin-top 24px
        margin-left 24px
        &:first-child
          margin-top 0
        img
          height 276px

.hot-product
  padding-bottom 80px
  background url('../images/bg-hot-product.jpg') no-repeat top center
  h4
    height 148px
    padding-bottom 24px
    font-size: 30px
    color: #333
    line-height: 148px
    text-align: center
  .list
    font-size: 0
    line-height: 0
    .item
      position relative
      text-align: right
      background-color #fafafa
      &.even
        text-align: left
      .cell
        display inline-block
        *display: inline
        *zoom: 1
        vertical-align: middle
        width: 588px
        font-size: 14px
        color: #999
        line-height: 20px
        .text
          display: inline-block
          *display: inline
          *zoom: 1
          vertical-align: top
          width 434px
          padding: 44px
          h5
            font-size: 30px
            color #333
            line-height: 48px
          p
            margin-top 24px
        img
          width: 588px
          height 370px
    .bg-7, .bg-8
      position: absolute
      bottom: 57px
      left 50%
    .bg-7
      margin-left -64px
    .bg-8
      margin-left 45px

