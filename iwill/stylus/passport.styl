.form-list
  font-size: 14px
  .item
    text-align: center
    dl
      width 260px
      display: inline-block
      *display: inline
      *zoom: 1
      vertical-align: top 
      text-align: left
      dt
        font-size: 14px
        color #999
        line-height: 28px
      dd
        position relative
        i
          position: absolute
          top: 50%
          left 10px
          &.bg-14
            margin-top -7px
          &.bg-15
            margin-top -7px
        input[type='text'], input[type='password']
          width 218px
          padding-left 30px


.change-password-page
  background-color: #f3f3f3
  padding: 84px 0 140px
  h2
    font-size: 30px
    color #333
    text-align: center
    line-height: 88px
  .form-list
    dt
      height 28px
      padding-top 12px
    input[type='submit']
      margin-top 30px

.sign-page
  position relative
  height 756px
  background url('../images/bg-passport.png') no-repeat top center
  .sign-contain
    position: absolute
    top: 50%
    left 50%
    width 485px
    height 470px
    margin: -235px 0 0 -242px
    background-color #fff
    border-radius: 3px
    &.signIn
      display: block
    &.register
      display: none
      margin-top -207px
      height: 414px
      input[type='submit']
        margin-top 30px
    h2
      font-size: 30px
      color: #333
      line-height: 118px
      text-align: center
    .form-list
      .item.p-top-15
        padding-top 15px
      label
        white-space: nowrap
        height 42px
        line-height: 42px
        input[type='checkbox']
          vertical-align: middle
          margin-right 8px
      .toSignIn
        line-height: 20px
        text-decoration: underline
        color: #489e87
      p
        margin-top 10px
        line-height 20px
        a
          color: #489e87

    .forgot
      line-height: 44px
      &:hover
        color: #489e87

.order-page
  padding-top 40px
  padding-bottom 60px
  padding-left 10px
  h4
    margin-bottom 20px
    font-size: 30px
    color: #333
    line-height: 44px
    text-align: center
  .title
    font-size: 14px
    color #555
    line-height: 24px
    margin-bottom 10px
    font-weight bold
    em
      color #ff444d
    span
      float right
      color #999
  .order-form
    float left
    width 632px
    .form
      padding: 10px 19px 38px
      border: 2px solid #f3f3f3
      dl
        dt
          padding-top 13px
          line-height: 27px
          font-size: 14px
          color: #555
          em
            color: #ff444d
        dd
          input
            width 568px
      input[type='submit']
        margin-top 20px
      .two-col
        dl
          float left
          margin-left 30px
          &:first-child
            margin-left 0
          input
            width 258px
  .order-detail
    float left
    margin-left 18px
    width: 479px
    .detail
      padding-bottom 10px
      border: 2px solid #f3f3f3
      .pro
        padding: 15px 5px 5px 15px
        font-size: 0
        line-height: 0
        .pic
          display: inline-block
          *display inline
          *zoom: 1
          vertical-align: middle
          img
            width 130px
            height 130px
        .info
          margin-left 20px
          width 300px
          display: inline-block
          *display inline
          *zoom: 1
          vertical-align: middle
          font-size: 16px
          color #333
          .order-id
            line-height: 25px
          .description
            margin-top 10px
            line-height: 20px
          .spec
            margin-top 5px
            font-size: 12px
            color #555
            line-height: 24px
      .total
        padding: 0 40px
        font-size: 14px
        color #555
        line-height: 30px
        text-align: right
        .c-green
          font-weight bold
          color: #489e87
          span
            font-weight bold
        span
          float left

.pro-detail-page
  .pro-detail
    padding: 45px 0
    background-color #f3f3f3
    .pro-pic
      margin-right 30px
      .big-pic
        width: 445px
        height 445px
        padding: 30px
        background-color #fff
        img
          width: 445px
          height 445px
      .pic-list
        margin-top 5px
        ul
          li
            margin-left 5px
            &:first-child
              margin-left 0
            &.active, &:hover
              border: 2px solid #489e87
              img
                width 76px
                height 76px
            img
              width: 80px
              height 80px