.form-list
  font-size: 14px
  .item
    text-align: center
    dl
      width 260px
      display: inline-block
      *display: inline
      *zoom: 1
      vertical-align: top 
      text-align: left
      dt
        font-size: 14px
        color #999
        line-height: 28px
      dd
        position relative
        i
          position: absolute
          top: 50%
          left 10px
          &.bg-14
            margin-top -7px
          &.bg-15
            margin-top -7px
        input[type='text'], input[type='password']
          width 218px
          padding-left 30px


.change-password-page
  background-color: #f3f3f3
  padding: 84px 0 140px
  h2
    font-size: 30px
    color #333
    text-align: center
    line-height: 88px
  .form-list
    dt
      height 28px
      padding-top 12px
    input[type='submit']
      margin-top 30px

.sign-page
  position relative
  height 756px
  background url('../images/bg-passport.png') no-repeat top center
  .sign-contain
    position: absolute
    top: 50%
    left 50%
    width 485px
    height 470px
    margin: -235px 0 0 -242px
    background-color #fff
    border-radius: 3px
    &.signIn
      display: block
    &.register
      display: none
      margin-top -207px
      height: 414px
      input[type='submit']
        margin-top 30px
    h2
      font-size: 30px
      color: #333
      line-height: 118px
      text-align: center
    .form-list
      .item.p-top-15
        padding-top 15px
      label
        white-space: nowrap
        height 42px
        line-height: 42px
        input[type='checkbox']
          vertical-align: middle
          margin-right 8px
      .toSignIn
        line-height: 20px
        text-decoration: underline
        color: #489e87
      p
        margin-top 10px
        line-height 20px
        a
          color: #489e87

    .forgot
      line-height: 44px
      &:hover
        color: #489e87

.order-page
  padding-top 40px
  padding-bottom 60px
  padding-left 10px
  h4
    margin-bottom 20px
    font-size: 30px
    color: #333
    line-height: 44px
    text-align: center
  .title
    font-size: 14px
    color #555
    line-height: 24px
    margin-bottom 10px
    font-weight bold
    em
      color #ff444d
    span
      float right
      color #999
  .order-form
    float left
    width 632px
    .form
      padding: 10px 19px 38px
      border: 2px solid #f3f3f3
      dl
        dt
          padding-top 13px
          line-height: 27px
          font-size: 14px
          color: #555
          em
            color: #ff444d
        dd
          input
            width 568px
      input[type='submit']
        margin-top 20px
      .two-col
        dl
          float left
          margin-left 30px
          &:first-child
            margin-left 0
          input
            width 258px
  .order-detail
    float left
    margin-left 18px
    width: 479px
    .detail
      padding-bottom 10px
      border: 2px solid #f3f3f3
      .pro
        padding: 15px 5px 5px 15px
        font-size: 0
        line-height: 0
        .pic
          display: inline-block
          *display inline
          *zoom: 1
          vertical-align: middle
          img
            width 130px
            height 130px
        .info
          margin-left 20px
          width 300px
          display: inline-block
          *display inline
          *zoom: 1
          vertical-align: middle
          font-size: 16px
          color #333
          .order-id
            line-height: 25px
          .description
            margin-top 10px
            line-height: 20px
          .spec
            margin-top 5px
            font-size: 12px
            color #555
            line-height: 24px
      .total
        padding: 0 40px
        font-size: 14px
        color #555
        line-height: 30px
        text-align: right
        .c-green
          font-weight bold
          color: #489e87
          span
            font-weight bold
        span
          float left

.pro-detail-page
  .pro-detail
    padding: 45px 0
    background-color #f3f3f3
    .pro-pic
      float left
      margin-right 30px
      .big-pic
        position relative
        z-index: 1
        padding: 30px
        width: 445px
        height 445px
        background-color #fff
        img
          width: 445px
          height 445px
      .pic-list
        margin-top 5px
        ul
          li
            margin-left 5px
            cursor pointer
            &:first-child
              margin-left 0
            &.active, &:hover
              border: 2px solid #489e87
              img
                width 76px
                height 76px
            img
              width: 80px
              height 80px
    .pro-info
      float left
      width 640px
      padding-top 15px
      .pro-name
        font-size: 18px
        color: #333
        line-height: 20px
      .details
        margin-top 5px
        font-size: 14px
        color: #555
        & > div
          margin-top 10px
          line-height: 30px
          .c-green
            color: #489e87
          .star-list
            display: inline-block
            *display inline
            *zoom 1
            vertical-align: text-bottom
            margin: 0 5px 0 10px
          .img-list
            display: inline-block
            *display inline
            *zoom 1
            vertical-align: top
            margin-top 5px
            img
              float left
              margin-left 2px
              &:first-child
                margin-left 0
          .type-choose-list
            margin-left -10px
            padding: 3px 0
            .pic
              float left
              margin-left 10px
              width: 48px
              height 48px
              border: 1px solid #e1e1e1
              background-color #fff
              cursor pointer
              &:first-child
              img
                width: 48px
                height 48px
              &.on
                width 46px
                height 46px
                border: 2px solid #489f87
                img
                  width 46px
                  height 46px
          &.price
            span
              margin: 0 15px 0 7px
              font-size: 22px
              vertical-align: bottom
              font-weight: bold
            .link
              color: #489e87
              text-decoration: underline
          &.desc
            p
              color: #999
              line-height: 20px
          &:first-child
            margin-top 0
          .type-list
            padding: 3px 0

.pro-list-page
  background-color #f3f3f3
  h4
    line-height: 86px
    font-size: 30px
    color: #333
    text-align: center
  .column
    padding-bottom 60px
    .column-banner
      height 580px
      background-position top center
      background-repeat: no-repeat
    .tab-list
      padding: 42px 0
      font-size: 0
      line-height: 0
      text-align: center
      li
        position relative
        display: inline-block
        *display inline
        *zoom: 1
        padding: 0 3px
        vertical-align: top
        margin-left 20px
        font-size: 14px
        color #555
        line-height: 28px
        cursor pointer
        &:first-child
          margin-left 0
        &.cur, &:hover
          color: #4c9582
          &:after
            content: ''
            position: absolute
            bottom: 0
            left: 0
            right 0
            height 2px
            background-color #4c9582
    .pro-list
      margin-left -32px
      margin-top -32px
      li
        margin-left 32px
        margin-top 32px
        padding: 0 14px
        width 242px
        height: 460px
        background-color #fff
        text-align: center
        font-size: 14px
        color #555
        transition: all 0.15s linear
        &:hover
          box-shadow: 0 0 10px rgba(114, 114, 114, 0.35)
        .pic
          padding 44px 0 54px
          img
            width 242px
            height 242px
        .star-list
          margin: 0 auto
        .name
          margin-top 6px
          line-height: 20px
          overflow: hidden
          text-overflow: ellipsis
          display: -webkit-box
          -webkit-line-clamp: 2
          -webkit-box-orient: vertical
        .price
          margin-top 6px
          span
            margin-left 15px
            color #489e87
            font-family 'Arial'
            line-height: 24px
            &:first-child
              margin-left 0
              color: #999
              text-decoration: line-through
    .loadmore
      display: block
      margin: 40px auto 0
      width 258px
      height 34px
      line-height: 34px
      text-align: center
      border: 1px solid #489e87
      font-size: 18px
      color #86b3a7
      transition: all 0.15s linear
      &:hover
        background-color #489e87
        color: #fff