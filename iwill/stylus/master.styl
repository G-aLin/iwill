.header
  ul
    li
      a
        color: #fff
  .sign
    a
      color: #fff
.top-header
  position relative
  height 485px
  background: url('../images/bg-top-header.jpg') no-repeat top center
  p
    position: absolute
    top: 50%
    left 0
    right 0
    height 88px
    line-height: 88px
    margin-top -44px
    text-align: center
    font-size: 72px
    color: #fff
    span
      position relative
      display: inline-block
      *display inline
      *zoom 1
      vertical-align: top
      &:after
        content: ''
        position: absolute
        bottom -11px
        left 45px
        right 45px
        height 4px
        background-color #489e87

.organizing-page
  padding-bottom 80px
  h2
    padding-top 37px
    line-height: 110px
    font-size: 36px
    color #333
    text-align: center
  .list
    margin-left -30px
    margin-top -30px
    .item
      float left
      margin-left 30px
      margin-top 30px
      width 350px
      background-color #f6f6f6
      .info
        padding: 10px 50px 10px 15px
        .time
          line-height: 30px
          font-size: 18px
          color #555
          .bg-18
            margin-right 20px
            margin-top 6px
            vertical-align: top
        .title
          line-height: 58px
          font-size: 20px
          color #489e87
          overflow hidden
          text-overflow: ellipsis
          white-space nowrap
        .describe
          margin-top 10px
          font-size: 16px
          color: #999
          line-height: 24px
          overflow: hidden
          text-overflow: ellipsis
          display: -webkit-box
          -webkit-line-clamp: 3
          -webkit-box-orient: vertical
          height 72px
        .read
          display: inline-block
          *display inline
          *zoom 1
          vertical-align: top
          margin-top 10px
          line-height: 30px
          font-size: 15px
          color #489e87
      .pic
        img
          width 350px
          height 232px
  .paging
    margin-top 60px