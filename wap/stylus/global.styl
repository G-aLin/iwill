@import 'icon'

.icon-global
  background-image url('../images/css_sprites.png') !important
  display: inline-block
  vertical-align: middle
  background-size: 1.88rem

input[type='type'], input[type='password'], input[type='submit'], textarea
  display: block
  box-sizing: border-box
  padding: 0.17rem 0.1rem
  width: 100%
  line-height: 0.36rem
  font-size: 0.2rem
  background-color: #fff
  border: 1px solid #eee
  color: #777777
  -webkit-appearance: none
  -webkit-tap-highlight-color: transparent
  border-radius: 0

input[type='type'], input[type='password'], input[type='submit'],
  height: 0.72rem

input[type="submit"]
    padding: 0
    height: 0.8rem
    color #fff
    background-color: #489e87
    border: 0
    font-size: 0.32rem

textarea
  height: 1.98rem
  resize: none

label
  input[type='checkbox']
    display: none
    color #000
    &:checked + .simulate
      background-color #ff444d
      border-color: #ff444d
  .simulate
    display: inline-block
    *display: inline
    *zoom: 1
    vertical-align: sub
    width: 0.26rem
    height 0.26rem
    background-color #fff
    border: 1px solid #e1e1e1
    border-radius: 0.05rem
  .name
    margin-left 0.1rem

.page
  height: 100%
  display: flex
  flex-direction: column
  box-sizing: border-box
  .page-scroll
    flex: 1
    overflow: auto

.c-green
  color: #489e87

.c-666
  color #666

.font-bold
  font-weight: bold

.header
  display: flex
  align-items: center
  height 0.88rem
  justify-content: center
  .slot-left
    position absolute
    top: 0
    left: 0
    width: 0.88rem
    height 0.88rem
    display: flex
    align-items: center
    justify-content: center
  .logo
    width 1.09rem
    height 0.64rem

.footer
  padding-top 0.24rem
  background-color #232323
  background-image url('../images/3.png')
  background-repeat no-repeat
  background-size 4.01rem 2.04rem
  background-position 0.23rem 0.74rem
  .us
    padding-bottom 0.4rem
    .contact-us
      padding: 0 0.25rem 0.07rem
      h5
        font-size: 0.3rem
        color #f3f3f3
        line-height: 0.4rem
        font-weight: bold
      .item
        margin-top 0.2rem
        display: flex
        align-items: center
        font-size: 0.2rem
        color #777
        line-height: 0.24rem
        &:first-child
          margin-top 0
        span
          display: flex
          align-items: center
          width: 0.35rem
        p
          flex: 1
    .open-times
      margin-top 0.3rem
      padding: 0 0.25rem
      h5
        font-size: 0.24rem
        color: #f3f3f3
        line-height: 0.4rem
        font-weight: bold
      p
        font-size: 0.2rem
        color: #777
        line-height: 0.36rem
    .inquiry
      margin-top 0.22rem
      padding: 0 0.25rem
      h5
        margin-bottom 0.13rem
        font-size: 0.24rem
        color: #fff
        line-height: 0.4rem
        font-weight: bold
      .item
        margin-top 0.2rem
        display: flex
        font-size: 0.2rem
        color: #777
        line-height: 0.5rem
        &:first-child
          margin-top 0
        .code
          width: 1.43rem
          height 0.5rem
          margin-left 0.1rem
        span
          flex: 0 0 1.26rem
          width: 1.26rem
        input, textarea
          flex: 1
          padding: 0.1rem
          line-height: 0.28rem
          background-color: #1f1f1f
          border: 1px solid #575757
          color: #777777
        input
          height: 0.5rem
          &[type='submit']
            flex: 0 0 2.45rem
            margin-left 1.26rem
            width: 2.45rem
            height: 0.5rem
            color #fff
            background-color: #489e87
            border: 0
            font-size: 0.24rem
  .copyright
    padding: 0.25rem
    font-size: 0.18rem
    color: #777
    line-height: 0.24rem
    background-color #1b1b1b
    text-align: center

.index-page
  .swiper-container-horizontal>.swiper-pagination-bullets, .swiper-pagination-custom, .swiper-pagination-fraction
    bottom: 0.3rem
    .swiper-pagination-bullet
      width: 0.34rem
      height 0.04rem
      background-color #e6ecea
      border-radius: 0
      opacity 1
      margin: 0 0.03rem
      &.swiper-pagination-bullet-active
        width 0.55rem
        height 0.05rem
        background-color #6dddbf
  .advertising
    padding: 0.2rem 0.25rem 0.1rem
    li
      margin-top 0.1rem
      &:first-child
        margin-top 0
      img
        width 100%
  .categray
    padding: 0 0.25rem 0.4rem
    h5
      font-size: 0.34rem
      color: #333
      line-height: 0.68rem
      text-align: center
    li
      margin-top 0.1rem
      &:first-child
        margin-top 0
      img
        width 100%
  .hot-product
    padding 0 0.25rem 0.28rem
    background-image: url('../images/1.png')
    background-size: 100%
    background-repeat no-repeat
    h5
      line-height: 0.93rem
      font-size: 0.34rem
      color: #333
      text-align: center
    ul
      margin-top -0.1rem
      display: flex
      flex-wrap: wrap
      flex-direction: row
      justify-content space-between
      li
        width 49.28%
        margin-top 0.1rem
        background-color #f5f5f5
        padding-bottom 0.1rem
        .pic
          height: 2.72rem
          display: flex
          justify-content: center
          flex-direction: column
        .name
          margin: 0.1rem 0.1rem 0
          font-size: 0.26rem
          color: #333
          line-height: 0.24rem
          height: 0.48rem
          overflow: hidden
          text-overflow: ellipsis
          display: -webkit-box
          -webkit-line-clamp: 2
          -webkit-box-orient: vertical
        .desc
          margin-top 0.1rem
          padding: 0 0.1rem
          font-size: 0.2rem
          color: #999
          line-height: 0.28rem
          overflow: hidden
          text-overflow: ellipsis
          display: -webkit-box
          -webkit-line-clamp: 4
          -webkit-box-orient: vertical

  .about-us
    h5
      font-size: 0.34rem
      color: #333
      text-align: center
      line-height: 0.56rem
    .content
      padding: 0.45rem 0.25rem 2.1rem
      font-size: 0.22rem
      color: #555
      line-height: 0.3rem
      text-align: center
      background-image: url('../images/2.png')
      background-position bottom center
      background-size: contain
      background-repeat no-repeat
      background-color #ecebf0
      .more
        display: block
        margin: 0.3rem auto 0
        width 2.41rem
        height 0.46rem
        text-align: center
        line-height: 0.46rem
        font-size: 0.22rem
        color #489e87
        background-color #f0eff4
        border: 0.02rem solid #489e87

.top-banner
  display: flex
